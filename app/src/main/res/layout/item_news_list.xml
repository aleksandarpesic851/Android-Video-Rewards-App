<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.droidoxy.easymoneyrewards.views.TextView_Lato
        android:id="@+id/date"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11.7dp"
        android:layout_marginStart="15.7dp"
        android:layout_marginLeft="15.7dp"
        android:layout_marginTop="11.7dp"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_size_12"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/SingleItem"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/space10">

            <ImageView
                android:id="@+id/image"
                android:visibility="visible"
                android:layout_width="120dp"
                android:contentDescription="@string/app_name"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="14dp"
                android:layout_marginLeft="14dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.droidoxy.easymoneyrewards.views.TextView_Lato
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_16" />

                <com.droidoxy.easymoneyrewards.views.TextView_Lato
                    android:id="@+id/subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_12" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="20.6dp"
                android:layout_marginRight="20.6dp">

                <com.droidoxy.easymoneyrewards.views.TextView_Lato
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_points_bg"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14"
                    android:text="+ 2"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:background="@drawable/rounded_premium_bg"
                    android:layout_marginTop="5dp">
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/premium_icon"
                        android:layout_marginBottom="2dp"/>

                    <com.droidoxy.easymoneyrewards.views.TextView_Lato
                        android:id="@+id/amount_premium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_14"
                        android:text=" 2"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/space10"
            android:background="#ececec" />

    </LinearLayout>

</LinearLayout>